{
    "$id": "https://vng.opencatalogi.nl/schemas/todo.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "version": "0.1.0",
    "title": "Todo",
    "type": "object",
    "description": "A to-do from an event.",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of this RequestType.",
            "required": true
        },
        "description": {
            "type": "string",
            "description": "An short description of this Event.",
            "nullable": true
        },
        "startDate": {
            "type": "string",
            "description": "The moment this event starts.",
            "format": "date-time",
            "required": true
        },
        "endDate": {
            "type": "string",
            "description": "The moment this event ends.",
            "format": "date-time",
            "required": true
        },
        "location": {
            "type": "string",
            "description": "The location of this event.",
            "nullable": true
        },
        "class": {
            "type": "string",
            "description": "The security class of this event.",
            "nullable": true
        },
        "geo": {
            "type": "string",
            "description": "The coordinates of this event.",
            "nullable": true
        },
        "organiser": {
            "type": "string",
            "description": "The organiser of this event linked to with an url.",
            "nullable": true
        },
        "status": {
            "type": "string",
            "description": "The status of this event.",
            "nullable": true
        },
        "summary": {
            "type": "string",
            "description": "Thje summary of this event.",
            "nullable": true
        }
    }
}